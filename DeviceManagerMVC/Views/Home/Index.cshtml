@{
    ViewData["Title"] = "Quản lý Thiết bị - Trang chủ";
}

<div class="container mt-5">
    <!-- Header -->
    <div class="row mb-5">
        <div class="col-md-12">
            <h1 class="display-4">Hệ thống Quản lý Thiết bị</h1>
            <p class="lead text-muted">Quản lý thiết bị và người dùng một cách hiệu quả</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-5">
        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm text-center h-100" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                <div class="card-body">
                    <i class="bi bi-laptop" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Tổng thiết bị</h5>
                    <p class="display-6 mb-0">@ViewBag.TotalDevices</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm text-center h-100" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white;">
                <div class="card-body">
                    <i class="bi bi-person-check" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Thiết bị đã gán</h5>
                    <p class="display-6 mb-0">@ViewBag.AssignedDevices</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm text-center h-100" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white;">
                <div class="card-body">
                    <i class="bi bi-person-x" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Chưa gán</h5>
                    <p class="display-6 mb-0">@ViewBag.UnassignedDevices</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-0 shadow-sm text-center h-100" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); color: white;">
                <div class="card-body">
                    <i class="bi bi-people" style="font-size: 2.5rem;"></i>
                    <h5 class="card-title mt-3">Người dùng</h5>
                    <p class="display-6 mb-0">@ViewBag.TotalUsers</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Cards -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 hover-card" style="cursor: pointer; transition: all 0.3s;">
                <div class="card-body text-center py-5">
                    <i class="bi bi-laptop" style="font-size: 3rem; color: #667eea;"></i>
                    <h4 class="card-title mt-3">Quản lý Thiết bị</h4>
                    <p class="card-text text-muted">Thêm, sửa, xóa và tìm kiếm thiết bị trong hệ thống</p>
                    <a href="@Url.Action("Index", "Device")" class="btn btn-primary mt-3">
                        <i class="bi bi-arrow-right"></i> Vào quản lý
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm h-100 hover-card" style="cursor: pointer; transition: all 0.3s;">
                <div class="card-body text-center py-5">
                    <i class="bi bi-people" style="font-size: 3rem; color: #f5576c;"></i>
                    <h4 class="card-title mt-3">Quản lý Người dùng</h4>
                    <p class="card-text text-muted">Quản lý thông tin người dùng và gán thiết bị</p>
                    <a href="@Url.Action("Index", "User")" class="btn btn-danger mt-3">
                        <i class="bi bi-arrow-right"></i> Vào quản lý
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mt-5 mb-5">
        <div class="col-md-12">
            <h2 class="mb-4">Tính năng chính</h2>
        </div>
        <div class="col-md-4 mb-3">
            <div class="feature-box p-4 rounded" style="background-color: #f8f9fa;">
                <i class="bi bi-check-circle text-success" style="font-size: 1.5rem;"></i>
                <h5 class="mt-3">CRUD Thiết bị</h5>
                <p class="text-muted">Thêm, sửa, xóa và xem chi tiết thiết bị</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="feature-box p-4 rounded" style="background-color: #f8f9fa;">
                <i class="bi bi-search text-info" style="font-size: 1.5rem;"></i>
                <h5 class="mt-3">Tìm kiếm nâng cao</h5>
                <p class="text-muted">Tìm thiết bị theo tên, mã hoặc tình trạng</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="feature-box p-4 rounded" style="background-color: #f8f9fa;">
                <i class="bi bi-link-45deg text-primary" style="font-size: 1.5rem;"></i>
                <h5 class="mt-3">Gán người dùng</h5>
                <p class="text-muted">Gán thiết bị cho người dùng và quản lý liên kết</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="feature-box p-4 rounded" style="background-color: #f8f9fa;">
                <i class="bi bi-database text-warning" style="font-size: 1.5rem;"></i>
                <h5 class="mt-3">CRUD Người dùng</h5>
                <p class="text-muted">Quản lý thông tin người dùng đầy đủ</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="feature-box p-4 rounded" style="background-color: #f8f9fa;">
                <i class="bi bi-graph-up text-success" style="font-size: 1.5rem;"></i>
                <h5 class="mt-3">Thống kê</h5>
                <p class="text-muted">Theo dõi thống kê thiết bị và người dùng</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="feature-box p-4 rounded" style="background-color: #f8f9fa;">
                <i class="bi bi-shield-check text-danger" style="font-size: 1.5rem;"></i>
                <h5 class="mt-3">An toàn dữ liệu</h5>
                <p class="text-muted">SQL Server với các ràng buộc toàn vẹn dữ liệu</p>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-card {
        transform: translateY(0);
    }

    .hover-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2) !important;
    }

    .feature-box {
        text-align: center;
        transition: all 0.3s;
    }

    .feature-box:hover {
        background-color: #e9ecef !important;
        transform: scale(1.05);
    }
</style>
