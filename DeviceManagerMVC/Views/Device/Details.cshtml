@model DeviceManagerMVC.Models.Device

@{
    ViewData["Title"] = "Chi tiết thiết bị";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>@ViewData["Title"]</h1>
            
            <div class="card mt-4">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Mã thiết bị</h6>
                            <p class="fs-5">@Html.DisplayFor(model => model.DeviceCode)</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Tên thiết bị</h6>
                            <p class="fs-5">@Html.DisplayFor(model => model.DeviceName)</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Loại thiết bị</h6>
                            <p class="fs-5">@Html.DisplayFor(model => model.Category)</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Ngày mua</h6>
                            <p class="fs-5">@Model.PurchaseDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Tình trạng</h6>
                            <p class="fs-5">
                                @{
                                    var statusClass = Model.Status switch
                                    {
                                        "Hoạt động" => "success",
                                        "Hỏng" => "danger",
                                        "Bảo trì" => "warning",
                                        _ => "secondary"
                                    };
                                }
                                <span class="badge bg-@statusClass">@Model.Status</span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Người sử dụng</h6>
                            <p class="fs-5">
                                @if (Model.User != null)
                                {
                                    <a href="@Url.Action("Details", "User", new { id = Model.User.Id })">
                                        @Model.User.Name
                                    </a>
                                }
                                else
                                {
                                    <span class="text-danger">Chưa gán</span>
                                }
                            </p>
                        </div>
                    </div>

                    @if (Model.User != null)
                    {
                        <hr />
                        <h5>Thông tin người sử dụng</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Email:</strong> @Model.User.Email</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Số điện thoại:</strong> @Model.User.PhoneNumber</p>
                            </div>
                        </div>
                        <p><strong>Phòng ban:</strong> @Model.User.Department</p>
                    }
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Sửa
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
