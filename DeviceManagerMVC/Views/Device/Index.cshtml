@model IEnumerable<DeviceManagerMVC.Models.Device>

@{
    ViewData["Title"] = "Danh sách thiết bị";
}

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm thiết bị mới
            </a>
        </div>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Tìm kiếm thiết bị</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchName" class="form-label">Tên thiết bị</label>
                    <input type="text" class="form-control" id="searchName" name="searchName" 
                           value="@ViewBag.SearchName" placeholder="Nhập tên thiết bị">
                </div>
                <div class="col-md-4">
                    <label for="searchCode" class="form-label">Mã thiết bị</label>
                    <input type="text" class="form-control" id="searchCode" name="searchCode" 
                           value="@ViewBag.SearchCode" placeholder="Nhập mã thiết bị">
                </div>
                <div class="col-md-4">
                    <label for="searchStatus" class="form-label">Tình trạng</label>
                    <input type="text" class="form-control" id="searchStatus" name="searchStatus" 
                           value="@ViewBag.SearchStatus" placeholder="Nhập tình trạng">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-info">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i> Xóa bộ lọc
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Devices Table -->
    <div class="table-responsive">
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Mã thiết bị</th>
                    <th>Tên thiết bị</th>
                    <th>Loại thiết bị</th>
                    <th>Ngày mua</th>
                    <th>Tình trạng</th>
                    <th>Người sử dụng</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DeviceCode)</td>
                        <td>@Html.DisplayFor(modelItem => item.DeviceName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Category)</td>
                        <td>@item.PurchaseDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            @{
                                var statusClass = item.Status switch
                                {
                                    "Hoạt động" => "success",
                                    "Hỏng" => "danger",
                                    "Bảo trì" => "warning",
                                    _ => "secondary"
                                };
                            }
                            <span class="badge bg-@statusClass">@item.Status</span>
                        </td>
                        <td>@(item.User != null ? item.User.Name : "Chưa gán")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="bi bi-eye"></i> Xem
                            </a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Không có thiết bị nào trong hệ thống.
        </div>
    }
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
</style>
