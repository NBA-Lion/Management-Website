@model DeviceManagerMVC.Models.User

@{
    ViewData["Title"] = "Chi tiết người dùng";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>@ViewData["Title"]</h1>

            <div class="card mt-4">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Tên</h6>
                            <p class="fs-5">@Html.DisplayFor(model => model.Name)</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Email</h6>
                            <p class="fs-5">
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Số điện thoại</h6>
                            <p class="fs-5">@Html.DisplayFor(model => model.PhoneNumber)</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Phòng ban</h6>
                            <p class="fs-5">@Html.DisplayFor(model => model.Department)</p>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Devices != null && Model.Devices.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Thiết bị được cấp phát</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>Mã thiết bị</th>
                                        <th>Tên thiết bị</th>
                                        <th>Loại thiết bị</th>
                                        <th>Tình trạng</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var device in Model.Devices.OrderBy(d => d.DeviceName))
                                    {
                                        <tr>
                                            <td>@device.DeviceCode</td>
                                            <td>@device.DeviceName</td>
                                            <td>@device.Category</td>
                                            <td>
                                                @{
                                                    var statusClass = device.Status switch
                                                    {
                                                        "Hoạt động" => "success",
                                                        "Hỏng" => "danger",
                                                        "Bảo trì" => "warning",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusClass">@device.Status</span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Device", new { id = device.Id })" class="btn btn-sm btn-info">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info mt-4" role="alert">
                    <i class="bi bi-info-circle"></i> Người dùng này chưa được cấp phát thiết bị nào.
                </div>
            }

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Sửa
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
